<div id="add_menu" class="form-horizontal">
	<div class="control-group">
		<label class="control-label" for="menu_name">菜单名称:</label>
		<div class="controls">
			<input class="form-control form-w200" type="text" id="menu_name" placeholder="请输入菜单名称" />
		</div>
		<p class="form-error"></p>
	</div>
	<div class="control-group">
		<label class="control-label" for="menu_icon">菜单代码:</label>
		<div class="controls">
			<input class="form-control form-w200" type="text" id="menu_icon" placeholder="请输入菜单代码" />
		</div>
		<p class="form-error"></p>
	</div>
	<div class="control-group">
		<label class="control-label" for="menu_describe">菜单描述:</label>
		<div class="controls">
			<textarea class="form-control form-w200" rows="3" id="menu_describe" placeholder="菜单描述文字"></textarea>
		</div>
		<p class="form-error"></p>
	</div>
	<div class="control-group">
		<label class="control-label" for="menu_sort">菜单排序:</label>
		<div class="controls">
			<input class="form-control form-w200" type="text" id="menu_sort" placeholder="只能输入数字" />
		</div>
		<p class="form-error"></p>
    </div>
</div>